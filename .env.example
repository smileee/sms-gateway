# ==========================
# Server Configuration
# ==========================
# HTTP server port
PORT=3000

# ==========================
# Serial Port Configuration
# ==========================
# Serial port path (e.g., /dev/ttyUSB3 on Linux/Mac or COM3 on Windows)
SERIAL_PORT=/dev/ttyUSB3
# Serial communication speed
BAUD_RATE=115200

# ==========================
# Timeout Settings (milliseconds)
# ==========================
# Time to wait for '>' prompt or error detection
PROMPT_TIMEOUT=2000
# Delay after successful SMS send
SUCCESS_DELAY=1000
# Delay after failed SMS send
FAILURE_DELAY=5000
# Time for modem to fully initialize at boot
MODEM_BOOT_DELAY=2000
# Timeout for complex AT commands
AT_COMMAND_TIMEOUT=5000
# Timeout for the complete SMS sending operation
SMS_TIMEOUT=60000

# ==========================
# Modem Settings
# ==========================
# Number of attempts to initialize the modem with AT commands
MODEM_AT_ATTEMPTS=2
# Delay between AT command attempts
MODEM_AT_DELAY=3000

# ==========================
# Debug Settings
# ==========================
# Enable verbose logs when set to "true"
DEBUG=false

# ==========================
# Queue Server
# ==========================
# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_password_here

# Queue Configuration
USE_QUEUE=true
QUEUE_LOGGING=true

# Logging Configuration
LOG_LEVEL=info

# Server Configuration
PORT=3000
BAUD_RATE=115200